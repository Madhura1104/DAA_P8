#include <stdio.h>

#define N 5
int G[N][N];
int color[N];

void printSolution(int n) {
    printf("\nSolution (Color assigned to each vertex):\n");
    for (int i = 0; i < n; i++)
        printf("Vertex %d ---> Color %d\n", i + 1, color[i]);
}

int isSafe(int v, int c, int n) {
    for (int i = 0; i < n; i++)
        if (G[v][i] && color[i] == c)
            return 0;
    return 1;
}

int graphColoringUtil(int m, int n, int v) {
    if (v == n) {
        printSolution(n);
        return 1;
    }
    for (int c = 1; c <= m; c++) {
        if (isSafe(v, c, n)) {
            color[v] = c;
            if (graphColoringUtil(m, n, v + 1))
                return 1;
            color[v] = 0;
        }
    }
    return 0;
}

void graphColoring(int m, int n) {
    for (int i = 0; i < n; i++)
        color[i] = 0;
    if (!graphColoringUtil(m, n, 0))
        printf("\nNo solution exists with %d colors.\n", m);
}

int main() {
    int n = 5;
    int m = 5;
    int tempG[5][5] = {
        {0, 1, 1, 1, 1},
        {1, 0, 1, 1, 1},
        {1, 1, 0, 1, 1},
        {1, 1, 1, 0, 1},
        {1, 1, 1, 1, 0}
    };
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            G[i][j] = tempG[i][j];
    printf("Graph Coloring using Backtracking\n");
    graphColoring(m, n);
    return 0;
}
